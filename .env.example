# HelpRealm example environment configuration

# Application settings
APP_NAME=HelpRealm
APP_CODENAME=dnyHelpRealm
APP_AUTHOR="Daniel Brendel"
APP_CONTACT="dbrendel1988(at)gmail(dot)com"
APP_VERSION="1.0"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL="http://localhost"
APP_DESCRIPTION="The free SaaS support ticket system"
APP_METADESC="Sign up now and get access to a personal customer support workspace"
