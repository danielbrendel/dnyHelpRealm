# Mailserv settings
MAILSERV_CRONPW="password"
MAILSERV_HOST=localhost
MAILSERV_PORT=143
MAILSERV_PROTOCOL=imap
MAILSERV_ENCRYPTION=tls
MAILSERV_VALIDATECERT=true
MAILSERV_USERNAME=mailserv
MAILSERV_PASSWORD=password
MAILSERV_INBOXNAME=INBOX
MAILSERV_EMAILADDR="example@domain.tld"

# SMTP settings
SMTP_FROMADDRESS="service@domain.tld"
SMTP_FROMNAME="${APP_NAME}"
